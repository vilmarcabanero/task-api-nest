{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@lib/*": ["src/@lib/*"],
      "@core/*": ["src/@core/*"],
      "@webapps/*": ["src/@webapps/*"],
      "@schemas": ["src/@schemas"],
      "~src/*": ["src/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "scripts"]
}
